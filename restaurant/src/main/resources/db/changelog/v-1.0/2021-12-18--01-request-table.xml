<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2021-12-18--01-create-courses-table" author="danila">
        <createTable tableName="courses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="point" type="int"/>
        </createTable>
        <createSequence sequenceName="courses_id_seq"/>
    </changeSet>

    <changeSet id="2021-12-29--01-create-students-table" author="danila">
        <createTable tableName="students">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_course" type="bigint">
                <constraints foreignKeyName="fk_student_course" references="courses(id)"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="text"/>
            <column name="group" type="text"/>
        </createTable>
        <createSequence sequenceName="students_id_seq"/>
    </changeSet>
</databaseChangeLog>